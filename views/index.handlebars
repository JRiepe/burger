
<img id="burgerimg" src="./img/burger.png">
<h1>Eat-Da-Burger</h1>
<!-- this is index.handlebars -->

    <ul>
        {{#each burger}}
          {{#unless devoured}}
          <li>
            <p>{{this.id}}. {{this.burger_name}}</p>      
                <form action="/devours/{{this.id}}" method="POST">       
                  <button type="submit">Devour it!</button>
                </form>    
          </li>
          {{/unless}}
        {{/each}}
    </ul>

    <ul>
        {{#each devour}}
          {{#if devoured}}
          <li>
            <p>{{this.id}}. {{this.burger_name}}</p>   
          </li>
          
          {{/if}}
        {{/each}}
    </ul>

<br>

{{!-- Form should send a post command to the server --}}

  <form action="/addBurger" method='POST'>
    <div class="form-group">
      <textarea id="addedBurger" name="addedBurger" rows="1" cols="40"></textarea>
    </div>

    <button type="submit">Add New Burger</button>
  </form>
